function validar_campo (){
	var txt = document.getElementById ("txtnome");
	var nome = txt.value;
	
	if(nome.length <4) {
		
		alert( " o campo nome deve possuir no minimo 4 caracteres!!");
		return false;
}else{
	return true;
	
	}
}


function validar_preco(){
		var txt = document.getElementById("txtpreco");
		var preco = txt.value;
		
		if (preco.value > 0){
			return true;
		}else{
				alert(" O valor n√£o pode ser menor que zero!! (negativo)" );
				return false;
		}
}		